{
  "$schema": "https://schema.railpack.com",
  "steps": {
    "install": {
      "commands": [
        "corepack enable && corepack use pnpm@10.8.1",
        "pnpm approve-builds better-sqlite3 esbuild @parcel/watcher",
        "pnpm install --frozen-lockfile --prefer-offline"
      ]
    },
    "build": {
      "inputs": [{ "step": "install" }],
      "commands": ["pnpm run build"]
    }
  }
}
